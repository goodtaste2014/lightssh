<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="workflow_deployment" extends="default" namespace="/workflow/deployment">
		<action name="deploy" class="workflowAction" method="deploy">
			<result name="input">/pages/workflow/deployment/profile.jsp</result>	
			<result name="success" type="redirectAction">list</result>	
        </action>
        
        <action name="undeploy" class="workflowAction" method="undeploy">
			<result name="success" type="redirectAction">list</result>	
        </action>
        
        <action name="list" class="workflowAction" method="deploymentList">
			<result name="success">/pages/workflow/deployment/list.jsp</result>	
        </action>
	</package>
	
	<package name="workflow_process" extends="default" namespace="/workflow/process">
		<action name="definitionlist" class="workflowAction" method="processDefinitionList">
			<result name="success">/pages/workflow/process/list_definition.jsp</result>	
        </action>
        
		<action name="instancelist" class="workflowAction" method="processInstanceList">
			<result name="success">/pages/workflow/process/list_instance.jsp</result>	
        </action>
        
		<action name="historylist" class="workflowAction" method="historyInstanceList">
			<result name="success">/pages/workflow/process/list_history.jsp</result>	
        </action>
        
        <action name="start" class="workflowAction" method="start">
			<result name="success" type="redirectAction">instancelist</result>	
        </action>
        
    </package>
    
	<package name="workflow_task" extends="default" namespace="/workflow/task">
		<action name="list" class="workflowAction" method="tasklist">
			<result name="success">/pages/workflow/task/list.jsp</result>	
        </action>
        
		<action name="claim" class="workflowAction" method="claim">
			<result name="success" type="redirectAction">list</result>	
        </action>
        
		<action name="prepare" class="workflowAction" method="prepare">
			<result name="input" type="chain">render</result>
			<result name="success" type="chain">complete</result>
        </action>
        
		<action name="render" class="workflowAction" method="render">
			<result name="success">/pages/workflow/form/apply_vacation.jsp</result>	
        </action>
        
		<action name="submit" class="workflowAction" method="submit">
			<result name="success" type="chain">view</result>
        </action>
        
		<action name="view" class="workflowAction" method="view">
			<result name="success">/pages/workflow/form/apply_vacation.jsp</result>
        </action>
        
		<action name="complete" class="workflowAction" method="complete">
			<result name="success" type="redirectAction">list</result>	
        </action>
	</package>
	
	<package name="workflow" extends="default" namespace="/workflow">
		<action name="processlist" class="workflowAction" method="processlist">
			<result name="success">/pages/workflow/list_process.jsp</result>	
        </action>
        
    </package>
    
</struts>