<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.1.xsd" default-lazy-init="true">
		
	<bean id="schedulerManager" class="com.google.code.lightssh.project.scheduler.service.SchedulerManagerImpl">
		<property name="jobIntervalManager" ref="jobIntervalManager" />
		<property name="quartzScheduler" ref="quartzScheduler"/>
	</bean>	
		
	<bean id="exampleBusinessObject" class="com.google.code.lightssh.project.example.service.QuartzExampleManagerImpl"/>
	
	<bean id="exampleServiceJobDetail" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass" value="com.google.code.lightssh.project.example.service.QuartzExampleManagerImpl" />
		<property name="jobDataAsMap">
			<map>
				<entry key="exampleBusinessObject" value-ref="exampleBusinessObject" />
			</map>  
		</property>
	</bean>
	
	<bean id="exampleCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="name" value="example_scheduler"/>
		<property name="cronExpression" value="* 0/10 * * * ?" />
		<property name="jobDetail" ref="exampleServiceJobDetail"/>
	</bean>
	
	<bean id="quartzScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="exampleCronTrigger" />
			</list>
		</property>
		
		<!-- cluster -->
		<property name="dataSource" ref="dataSource"/>
		<property name="applicationContextSchedulerContextKey" value="applicationContextKey"/>
		<property name="configLocation" value="classpath:config/quartz.properties" /> 
	</bean>
	
</beans>