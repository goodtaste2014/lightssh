<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false">
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    
    	<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
 
        <encoder charset="UTF-8">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} |${HOSTNAME}| [%thread] %-5level %logger{72} - %msg%n</pattern>
        </encoder>
    </appender>  
 
    <appender name="dailyRollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<prudent>false</prudent>
    	
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
 
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        	<!-- daily rollover -->
        	<fileNamePattern>/weblogic/Oracle/Middleware/user_projects/domains/ecps_domain/logs/ecps.%d{yyyy-MM-dd}.log</fileNamePattern>
        	<!-- keep 365 days' worth of history -->
			<maxHistory>365</maxHistory>
        </rollingPolicy>
 
 		<!--  
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
 		-->
 
        <encoder>
      		<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} |${HOSTNAME}| [%thread] %-5level %logger - %msg%n</pattern>
		</encoder>
    </appender>
    
    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.hibernate" level="ERROR"/>
    <logger name="frameworkx.springframework.scheduling.quartz" level="ERROR"/>
    <logger name="org.apache.struts2" level="ERROR"/>
    <logger name="com.opensymphony.xwork2" level="ERROR"/>
    <logger name="com.google.code.lightssh" level="INFO"/>
    <logger name="com.ylink.project" level="INFO"/>
    
    <root level="INFO">
        <appender-ref ref="console" />
        <appender-ref ref="dailyRollingFile"/>
    </root>
</configuration>